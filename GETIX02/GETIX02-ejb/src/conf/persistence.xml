<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GETIX02-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/gettix</jta-data-source>
    <class>entites.Address</class>
    <class>entites.Artist</class>
    <class>entites.Category</class>
    <class>entites.Customer</class>
    <class>entites.DeliveryOption</class>
    <class>entites.Director</class>
    <class>entites.Event</class>
    <class>entites.Genre</class>
    <class>entites.Order</class>
    <class>entites.Performance</class>
    <class>entites.Seat</class>
    <class>entites.SubGenre</class>
    <class>entites.Tax</class>
    <class>entites.Ticket</class>
    <class>entites.Venue</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
